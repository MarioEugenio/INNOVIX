@{
    Layout = null;
}

<div ng-controller="UserListCtrl" ng-init="init()">
    <ol class="breadcrumb">
      <li><a href="#/home/init">Home</a></li>
      <li class="active">Usuário</li>
    </ol>

 <div  class="page-header">
    <h3>Usuários</h3>
    </div>
    <p>
        <form ui-keypress="{13:'searchUser(1)'}" ng-submit="searchUser(1)" class="panel panel-default">
          <div class="panel-heading">Pesquise usuários cadastrados</div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-10">
                <div class="input-group">
                  <input type="text" class="form-control" ng-model="search" placeholder="Nome do usuário">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span> Pesquisar</button>
                  </span>
                </div><!-- /input-group -->
              </div><!-- /.col-lg-6 -->
              <div class="col-lg-2">
                <div class="input-group pull-right">
                    <a class="btn btn-primary" href="#/user/create">Cadastrar</a>
                </div><!-- /input-group -->
              </div><!-- /.col-lg-6 -->
            </div>
          </div>
        </form>

        <div ng-show="listUser.length == 0" class="alert alert-warning" role="alert">
            <a href="#" class="alert-link"><span class="glyphicon glyphicon-warning-sign"></span> Não houve retorno de registros</a>
        </div>

        <div ng-show="listUser.length" class="panel panel-default">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="table-header">
                        <th>Nome<i ng-class="sorting('noUsuario')" ng-click="sortingTable('noUsuario')" class="alingArrowRight glyphicon "></i></th>
                        <th>CPF / CNPJ<i ng-class="sorting('codCpfCnpj')" ng-click="sortingTable('codCpfCnpj')" class="alingArrowRight glyphicon "></i></th>
                        <th>E-mail<i ng-class="sorting('noEmail')" ng-click="sortingTable('noEmail')" class="alingArrowRight glyphicon "></i></th>
                        <th>Telefone<i ng-class="sorting('noTelefone')" ng-click="sortingTable('noTelefone')" class="alingArrowRight glyphicon "></i></th>
                        <th>Perfil<i ng-class="sorting('noPerfil')" ng-click="sortingTable('noPerfil')" class="alingArrowRight glyphicon "></i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in listUser">
                        <td>{{ item.noUsuario }}</td>
                        <td>{{ item.codCpfCnpj }}</td>
                        <td>{{ item.noEmail }}</td>
                        <td>{{ item.noTelefone }}</td>
                        <td>{{ item.noPerfil }}</td>
                        <td style="width:110px;">
                            <a class="btn btn-default btn-mini" href="#/user/{{ item.Id }}/alter"><span class="glyphicon glyphicon-edit"></span></a>
                            <!--<a class="btn btn-default btn-mini" ng-click="remove($index, item)"><span class="glyphicon glyphicon-trash"></span></a>-->
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" class="table-footer">
                            <div class="pull-left">
                                <pagination  previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;" total-items="totalItems" ng-model="currentPage" max-size="maxSize" ng-change="pageChanged()" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
                            </div>
                            <div class="pull-right table-count">
                                <h5>Total de registros <span class="label label-primary">{{ totalItems }}</span></h5>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
       
    </p>
</div>




