<div ng-controller="ReportSealsListCtrl" ng-init="init()">
    <ol class="breadcrumb">
      <li><a href="#/home/init">Home</a></li>
      <li class="active">Relatorio de Lacres</li>
    </ol>

 <div  class="page-header">
    <h3>Lacres</h3>
    </div>
    <p>
        <div class="panel panel-default">
          <div class="panel-heading">Pesquise lacres cadastrados</div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <div class="input-group">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                              <input type="text" class="form-control" readonly="true" placeholder="Data de Atualização" datepicker-popup="{{format}}" ng-model="search.dtAtualizacao" is-open="opened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                              <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                              </span>
                        </div>
                        <div class="form-group">
                            <label> Origem</label>
                            <select  ng-model="search.origem" class="form-control">
                                <option value="">Selecione ...</option>
                                <option ng-repeat="item in listLocation" value="{{ item.Id }}">{{ item.noNome }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input type="text" class="form-control" ng-model="search.cod" placeholder="Código">
                        </div>
                        <div class="form-group">
                            <label>Destino</label>
                            <select  ng-model="search.destino"  class="form-control">
                                <option value="">Selecione ...</option>
                                <option ng-repeat="item in listLocation" value="{{ item.Id }}">{{ item.noNome }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="input-group-btn">
                        <button class="btn btn-default" ng-click="searchSeals(1)" type="button"><span class="glyphicon glyphicon-search"></span> Pesquisar</button>
                    </div>
                    <div class="input-group-btn">
                        <button class="btn btn-default" ng-click="clear()" type="button"><span class="glyphicon glyphicon-trash"></span> Limpar</button>
                    </div>
                </div><!-- /input-group -->
              </div><!-- /.col-lg-6 -->
            </div>
          </div>
        </div>

        <div>
            <li class="dropdown" style="display: inline;">
                <a href="#" class=" btn btn-primary  dropdown-toggle"  data-toggle="dropdown"><span class="glyphicon glyphicon-export"></span> Exportar <span class="caret"></span></a>
                <ul class="dropdown-menu " role="menu">
			        <li> <a  download="relatorio de itens.xls" href="#" onclick="return ExcellentExport.excel(this, 'reportItens', 'RelatorioExcel');">Excel</a></li>
			        <li><a href="#/report/seals/list" ng-click="exportPDF()">PDF</a></li>
		        </ul>
            </li>
        </div><br />

        <div ng-show="list.length == 0" class="alert alert-warning" role="alert">
            <a href="#" class="alert-link"><span class="glyphicon glyphicon-warning-sign"></span> Não houve retorno de registros</a>
        </div>

        <div ng-show="list.length" class="panel panel-default">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="table-header">
                        <th>Código<i ng-class="sorting('codigo')" ng-click="sortingTable('codigo')" class="alingArrowRight glyphicon "></i></th>
                        <th>Origem<i ng-class="sorting('origem')" ng-click="sortingTable('origem')" class="alingArrowRight glyphicon "></i></th>
                        <th>Destino<i ng-class="sorting('destino')" ng-click="sortingTable('destino')" class="alingArrowRight glyphicon "></i></th>
                        <th>Status<i ng-class="sorting('status')" ng-click="sortingTable('status')" class="alingArrowRight glyphicon "></i></th>
                        <th>Ult. Atualização<i ng-class="sorting('dt_atualizacao')" ng-click="sortingTable('dt_atualizacao')" class="alingArrowRight glyphicon "></i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in list">
                        <td>{{ item.awb }}</td>
                        <td>{{ item.origin }}</td>
                        <td>{{ item.destiny }}</td>
                        <td>{{ item.status }}</td>
                        <td>{{ item.dtAtualizacao }}</td>
                        <td style="width:110px;">
                            <a class="btn btn-default btn-mini" ng-click="openModal(item.Id)"><span class="glyphicon glyphicon-list-alt"></span></a>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="7" class="table-footer">
                            <div class="pull-left">
                                <pagination  previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;" total-items="totalItems" ng-model="currentPage" max-size="maxSize" ng-change="pageChanged()" boundary-links="true" rotate="false" num-pages="numPages"></pagination>
                            </div>
                            <div class="pull-right table-count">
                                <h5>Total de registros <span class="label label-primary">{{ totalItems }}</span></h5>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
       <div id="tableReport">
            <table id="reportItens" class="table table-striped" style="display:none">
                <thead>
                    <tr >
                        <th>Código</th>
                        <th>Origem</th>
                        <th>Destino</th>
                        <th>Status</th>
                        <th>Ult. Atualização</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in export">
                        <td>{{ item.awb }}</td>
                        <td>{{ item.origin }}</td>
                        <td>{{ item.destiny }}</td>
                        <td>{{ item.status }}</td>
                        <td>{{ item.dtAtualizacao }}</td>
                    </tr>
                </tbody>
            </table>
       </div>
    </p>
</div>




